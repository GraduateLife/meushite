{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "next",
    "prettier"
  ],
  "ignorePatterns": [
    "components/ui/**/*",
    ".next/**/*",
    "tailwind.config.ts",
    "eslint.config.mjs",
    "next.config.ts"
  ],

  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        //   "varsIgnorePattern": "^_*",
        //   "argsIgnorePattern": "^_*",
        "caughtErrors": "none"
      }
    ],
    "@typescript-eslint/consistent-type-definitions": ["error", "type"]
  },

  "env": {
    "browser": true,
    "es2021": true
  }
}
